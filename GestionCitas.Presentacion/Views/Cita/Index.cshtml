@{
    ViewBag.Title = "Index";
    ViewBag.Head = "Registrar Cita";
    ViewBag.SubTitle = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style></style>
}

@section ScriptsCode{
    <script type="text/javascript" src="@Url.Content("~/App_CodeJS/Cita/Index.js")"></script>
}

<table style="width: 100%; border-spacing: 10px; border-collapse: separate;" cellspacing="10">
    <tr>
        <td style="width:13%" align="right"><label>Buscar por:</label>&nbsp;&nbsp;</td>
        <td style="width:10%">
            <label style="font-weight:normal;"><input type="radio" name="rbFiltro" id="rbEspecialidad" value="E" />&nbsp;Especialidad&nbsp;</label>&nbsp;&nbsp;
        </td>
        <td style="width:10%">
            <label style="font-weight:normal;"><input type="radio" name="rbFiltro" id="rbMedico" value="M" checked />&nbsp;Medico&nbsp;</label>
        </td>
        <td style="width:13%" align="right"><label for="txtFechaAtencion">Fecha de atención:</label>&nbsp;&nbsp;</td>
        <td style="width:54%">
            <input type="text" id="txtFechaAtencion" class="form-control" style="width:200px;" />
        </td>
    </tr>
    <tr>
        <td style="width:100%" colspan="5">
            <input type="text" id="txtFiltro" class="form-control" placeholder="Ingrese Texto" />
        </td>
    </tr>
    <tr>
        <td style="width:100%" colspan="5">
            <div class="toolbar">
                <button type="button" id="btnBuscar" style="width:100%">
                    <i class="fa fa-fw fa-search"></i> Buscar Horarios
                </button>
            </div>
        </td>
    </tr>
</table>

<div id="grilla"></div>